collatz_number = int(input("Enter a positive number: "))
steps= 0
while collatz_number != 1:
    if collatz_number%2 == 0:
        collatz_number//=2
        print (collatz_number)
        steps+=1
    else:
        collatz_number= (3 * collatz_number) + 1
        print (collatz_number)
        steps+=1
print("steps = "+ str(steps))
        
